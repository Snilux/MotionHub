---
interface Props {
    text: string;
    href: string;
    theme: "white" | "dark";
}

const themeButton = {
    white: "bg-white text-black hover:bg-black hover:text-white border border-black",
    dark: "bg-black text-white hover:bg-white hover:text-black hover:border hover:border-black",
};

const { text, href, theme } = Astro.props;
---

<div class="flex items-center justify-center">
    <a
        href={href}
        class={`${themeButton[theme]} text-sm font-regular text-center px-4 py-2 rounded-lg 
        transition-colors duration-300 ease-in-out`}
    >
        {text}
    </a>
</div>
