---
import AnimationBgAuth from "../components/common/AnimationBgAuth.astro";
import Title from "../components/common/Title.astro";
import Layout from "../layouts/Layout.astro";
import Icon from "../components/common/Icons.astro";
---

<Layout title="Registrarse">
    <div
        class="relative min-h-screen flex items-center justify-center p-4 overflow-hidden"
    >
        <!-- Background Animation -->
        <div class="absolute inset-0 -z-10">
            <AnimationBgAuth />
        </div>

        <!-- Content -->
        <div class="w-full max-w-5xl relative z-10 my-2">
            <!-- Logo -->
            <div class="text-center mb-2">
                <div class="flex items-center justify-center gap-2 mb-2">
                    <a href="/">
                        <Title size="lg" />
                    </a>
                </div>
            </div>

            <!-- Title Card (separate) -->
            <div
                class="backdrop-blur-xl bg-white/50 rounded-xl shadow-2xl p-4 mb-2"
            >
                <h2 class="text-3xl font-bold text-gray-900 text-center">
                    Crea tu cuenta
                </h2>
                <p class="text-gray-600 text-center">
                    Únete a la comunidad de MotionHub
                </p>
            </div>

            <!-- Form Content -->
            <form class="space-y-2">
                <!-- Three Column Grid -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-2">
                    <!-- Column 1: Email and Name -->
                    <div
                        class="backdrop-blur-xl bg-white/50 rounded-xl shadow-2xl p-2 space-y-2"
                    >
                        <!-- Name Input -->
                        <div>
                            <label
                                for="name"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Nombre completo
                            </label>
                            <input
                                type="text"
                                id="name"
                                name="name"
                                required
                                placeholder="Juan Pérez"
                                class="w-full px-4 py-3 bg-white/50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 placeholder:text-gray-400"
                            />
                        </div>

                        <!-- Email Input -->
                        <div>
                            <label
                                for="email"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Correo electrónico
                            </label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                required
                                placeholder="tu@email.com"
                                class="w-full px-4 py-3 bg-white/50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 placeholder:text-gray-400"
                            />
                        </div>
                    </div>

                    <!-- Column 2: Passwords -->
                    <div
                        class="backdrop-blur-xl bg-white/50 rounded-xl shadow-2xl p-6 space-y-5"
                    >
                        <!-- Password Input -->
                        <div>
                            <label
                                for="password"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Contraseña
                            </label>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                required
                                placeholder="••••••••"
                                class="w-full px-4 py-3 bg-white/50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 placeholder:text-gray-400"
                            />
                            <p class="mt-1 text-xs text-gray-500">
                                Mínimo 8 caracteres
                            </p>
                        </div>

                        <!-- Confirm Password Input -->
                        <div>
                            <label
                                for="confirm-password"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Confirmar contraseña
                            </label>
                            <input
                                type="password"
                                id="confirm-password"
                                name="confirm-password"
                                required
                                placeholder="••••••••"
                                class="w-full px-4 py-3 bg-white/50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 placeholder:text-gray-400"
                            />
                        </div>
                    </div>

                    <!-- Column 3: User Type -->
                    <div
                        class="backdrop-blur-xl bg-white/50 rounded-xl shadow-2xl p-6"
                    >
                        <label
                            class="block text-sm font-medium text-gray-700 mb-2"
                        >
                            Tipo de cuenta
                        </label>
                        <div class="space-y-2">
                            <label
                                class="relative flex items-center justify-center p-2 bg-white/50 border-2 border-gray-200 rounded-xl cursor-pointer hover:bg-white/80 transition-all duration-200 has-[checked]:border-blue-500 has-[checked]:bg-blue-50/50"
                            >
                                <input
                                    type="radio"
                                    name="user-type"
                                    value="paciente"
                                    class="sr-only"
                                    checked
                                />
                                <div class="text-center">
                                    <svg
                                        class="w-8 h-8 mx-auto mb-2 text-blue-600"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                        ></path>
                                    </svg>
                                    <span
                                        class="text-sm font-medium text-gray-700"
                                        >Paciente</span
                                    >
                                </div>
                            </label>
                            <label
                                class="relative flex items-center justify-center p-2 bg-white/50 border-2 border-gray-200 rounded-xl cursor-pointer hover:bg-white/80 transition-all duration-200 has-[checked]:border-blue-500 has-[checked]:bg-blue-50/50"
                            >
                                <input
                                    type="radio"
                                    name="user-type"
                                    value="fisioterapeuta"
                                    class="sr-only"
                                />
                                <div class="text-center">
                                    <svg
                                        class="w-8 h-8 mx-auto mb-2 text-blue-600"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                        ></path>
                                    </svg>
                                    <span
                                        class="text-sm font-medium text-gray-700"
                                        >Fisioterapeuta</span
                                    >
                                </div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Bottom Section: Terms, Buttons, Links (separate card) -->
                <div
                    class="backdrop-blur-xl bg-white/50 rounded-xl shadow-2xl p-6 space-y-5"
                >
                    <!-- Terms & Conditions -->
                    <div>
                        <label class="flex items-start">
                            <input
                                type="checkbox"
                                required
                                class="w-4 h-4 mt-1 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                            />
                            <span class="ml-2 text-sm text-gray-600">
                                Acepto los
                                <a
                                    href="#"
                                    class="text-blue-600 hover:text-blue-700 font-medium"
                                    >términos y condiciones</a
                                >
                                y la
                                <a
                                    href="#"
                                    class="text-blue-600 hover:text-blue-700 font-medium"
                                    >política de privacidad</a
                                >
                            </span>
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button
                        type="submit"
                        class="w-full bg-linear-to-r from-blue-600 to-blue-500 text-white py-3 px-4 rounded-xl font-semibold hover:from-blue-700 hover:to-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 shadow-lg shadow-blue-500/30"
                    >
                        Crear cuenta
                    </button>

                    <!-- Divider -->
                    <div class="relative">
                        <div class="relative flex justify-center text-sm">
                            <span class="px-4  "
                                >O regístrate con</span
                            >
                        </div>
                    </div>

                    <!-- Social Register -->
                    <div class="flex justify-center gap-2">
                        <button
                            type="button"
                            class="flex items-center justify-center gap-2 px-4 py-3 bg-white/50 border border-gray-200 rounded-xl hover:bg-white/80 transition-all duration-200 w-full shadow-2xl"
                        >
                            <Icon name="google" />
                            <span class="text-sm font-medium text-gray-700"
                                >Google</span
                            >
                        </button>
                    </div>

                    <!-- Login Link -->
                    <div class="text-center">
                        <p class="text-gray-600">
                            ¿Ya tienes una cuenta?
                            <a
                                href="/login"
                                class="text-blue-600 hover:text-blue-700 font-semibold"
                            >
                                Inicia sesión aquí
                            </a>
                        </p>
                    </div>
                </div>
            </form>

            <!-- Footer -->
            <div class="mt-2 text-center text-sm text-gray-500">
                <p>© 2026 MotionHub. Todos los derechos reservados.</p>
            </div>
        </div>
    </div>
</Layout>
